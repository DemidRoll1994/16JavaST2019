<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>webHello</display-name>
    <welcome-file-list>
        <welcome-file>/WEB-INF/jsp/index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>
            by.samtsov.controller.servlet.ControllerServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/parseXML</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>ActionFromUriFilter</filter-name>
        <filter-class>by.samtsov.controller.filter.ActionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ActionFromUriFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>

    <resource-ref>
        <res-ref-name>jdbc/appname</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <jsp-config>
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/resources/tld/custom.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>